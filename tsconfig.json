{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "ES6",
      "DOM"
    ]
  },
  "include": [
    "src"
  ]
}